<!DOCTYPE html>
<html>
  <head>
    <title>TechTalentBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div class="pull-right">
      <% if user_signed_in? %>
        Welcome, <%= current_user.username %>!
          <% if gravatar_tag current_user.email? %>
            <%= gravatar_tag current_user.email, size: 30 %>
          <% else %>
            <%= image_tag current_user.avatar.url, size: 30 %>
          <% end %>
        <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-primary"%>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
  	<div class="container">
    <%= yield %>
	</div>

  </body>
</html>
