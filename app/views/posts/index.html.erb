<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th></th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><em><%= link_to post.user.username, user_posts_path(name: post.user.username) %></em></td>
        <% if post.user.avatar != nil %>
          <td><%= image_tag post.user.avatar.url, size: 50, class: "img-responsive" %></td>
          <% end %>
        <td><%= post.blog_entry.html_safe %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Post', new_post_path %>
<br/>
<%= paginate @posts %>